<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.leon.grabthefood">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".signInActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".menusRelated.cameraActivity" />
        <activity android:name=".commonActivity.makeRequestActivity" />
        <activity android:name=".commonActivity.displayRequestActivity" />
        <activity android:name=".personalActivity.myRequestActivity" />
        <activity android:name=".personalActivity.myPickupsActivity" />
        <activity android:name=".menusRelated.MenuActivity"></activity>
    </application>

</manifest>